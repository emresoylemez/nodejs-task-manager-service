{
  "name": "task-manager-service",
  "version": "1.0.0",
  "description": "Task Manager Service",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "precommit": "CI=true yarn lint && yarn test",
    "prebuild": "npm run remove-dist",
    "build": "tsc",
    "postbuild": "npm run copy-resources",
    "prestart": "npm run remove-dist",
    "start": "cross-env NODE_ENV=local tsc-watch --project . --onFirstSuccess \"npm run nodemon\"",
    "startup": "node --inspect ./dist/index.js",
    "prenodemon": "npm run copy-resources",
    "nodemon": "nodemon ./dist/index.js",
    "nodemon-debug": "npm run nodemon -- --inspect",
    "remove-dist": "rm -rf ./dist",
    "copy-resources": "cp -Rf ./copyFolder ./dist",
    "pretest": "npm run build",
    "test": "cross-env NODE_ENV=test jest --forceExit --runInBand",
    "test:c": "npm run test -- --coverage",
    "test:w": "npm run test -- --watch",
    "commit": "git-cz",
    "push": "git push",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "yarn lint -- --fix"
  },
  "dependencies": {
    "@ylz/auth-middleware": "git+https://github.com/aytekinyaliz/ylz-auth-middleware.git",
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "dotenv": "6.1.0",
    "express": "4.16.3",
    "express-validator": "5.2.0",
    "helmet": "3.12.1",
    "jsonwebtoken": "8.5.1",
    "method-override": "2.3.10",
    "mongoose": "5.7.7",
    "morgan-body": "2.4.5",
    "pjson": "1.0.9",
    "redis": "2.8.0",
    "sha1": "1.1.1",
    "swagger-jsdoc": "3.3.0",
    "swagger-ui-express": "3.0.10"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/faker": "4.1.2",
    "@types/helmet": "0.0.38",
    "@types/jest": "23.3.12",
    "@types/method-override": "0.0.31",
    "@types/mongoose": "5.2.0",
    "@types/node": "10.5.2",
    "@types/supertest": "2.0.4",
    "@types/swagger-jsdoc": "0.0.2",
    "@types/swagger-ui-express": "3.0.0",
    "@types/yargs": "12.0.2",
    "commitizen": "4.0.3",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "2.1.0",
    "faker": "4.1.0",
    "husky": "0.14.3",
    "jest": "24.8.0",
    "jest-sonar-reporter": "2.0.0",
    "mongodb-memory-server": "4.2.1",
    "nodemon": "1.18.7",
    "sinon": "7.2.3",
    "sonarjs": "1.0.0",
    "supertest": "3.1.0",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.2.1",
    "tslint": "5.10.0",
    "typedoc": "0.14.2",
    "typescript": "3.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
